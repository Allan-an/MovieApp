<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.movie.MovieDetailsFragment">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />
    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moviesDetailsTitleTxt"
        android:textStyle="bold"
        android:textSize="@dimen/titleTxtSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideTitleTxt" />
    <ImageView
        android:id="@+id/posterImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTxt"
        />
    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/posterImage"/>

    <TextView
        android:id="@+id/movieDecs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/movieTitle"/>

    <TextView
        android:id="@+id/movieGenres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/movieDecs"/>
    <TextView
        android:id="@+id/movieReleaseDateTitleTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:text="@string/moviesReleaseDateTitleTxt"
        app:layout_constraintTop_toBottomOf="@+id/movieGenres"/>
    <TextView
        android:id="@+id/movieReleaseDateTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/movieReleaseDateTitleTxt"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/movieGenres"/>
    <TextView
        android:id="@+id/movieRatingTitleTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/movieRatingTxt"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="@string/moviesRatingTitleTxt"
        app:layout_constraintTop_toBottomOf="@+id/movieGenres"/>

    <TextView
        android:id="@+id/movieRatingTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/movieGenres"/>
</androidx.constraintlayout.widget.ConstraintLayout>